<Menu_Screen>:

	name: 'menu_screen'

	btn: btn
	
	tbh1: tbh1
	tbh2: tbh2
	tbh3: tbh3
	tbh4: tbh4

	#food_grid: food_grid


	header: header


	total_btn: total_btn

	sm: sm

	BoxLayout:
		orientation: 'vertical'

		canvas.before:
			Color:
				rgba: 225/255., 225/255., 225/255., 1

			Rectangle:
				pos: self.pos
				size: self.size

		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: .1
			padding: 2

			Image:
				size_hint_x: .15
				source: 'images/logo.png'

			Label:
				size_hint_x: .45
				id: btn
				text: ''
				font_name: 'fonts/Lemon-R.ttf'
				font_size: self.height/2.
				color: 1, 0, 0, 1
				text_size: self.size
				halign: 'left'
				valign: 'middle'


			AnchorLayout:
				size_hint_x: .4
				anchor_x: "right"
				anchor_y: "center"	

				Button:
					text: root.admin_title
					font_name: 'fonts/Lemon-R.ttf'
					size_hint: .3,.9
					font_size: self.height/2.7
					bold: True
					background_normal: 'images/normal_btn.png'
					on_release:
						root.go_to_manage_screen()



		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: .1
#			padding: 2
			spacing: 2

			ToggleButton:
				id: tbh1
				text: ''
				group: 'accordion'
				font_name: 'fonts/Lemon-R.ttf'
				state: 'down'
				background_normal: 'images/normal_btn.png'
				on_state:
					root.toggle_clicked()			

			ToggleButton:
				id: tbh2
				text: ''
				group: 'accordion'
				font_name: 'fonts/Lemon-R.ttf'
				background_normal: 'images/normal_btn.png'
				on_state:
					root.toggle_clicked()

			ToggleButton:
				id: tbh3
				text: ''
				group: 'accordion'
				font_name: 'fonts/Lemon-R.ttf'
				bold: True
				background_normal: 'images/normal_btn.png'
				on_state:
					root.toggle_clicked()



			ToggleButton:
				id: tbh4
				text: ''
				group: 'accordion'
				font_name: 'fonts/Lemon-R.ttf'
				background_normal: 'images/normal_btn.png'
				on_state:
					root.toggle_clicked()			




#		BoxLayout:
#			orientation: 'horizontal'
#			size_hint_y: .8




		BoxLayout:
			size_hint_y: .7
			orientation: 'vertical'
			canvas.before:
				Color:
					rgba: 1, 1, 1, 1

				Rectangle:
					pos: self.pos
					size: self.size



			BoxLayout:
				id: header
				size_hint_y: .1



			ScreenManager:
				size_hint_y: .6
				id: sm

#			ScrollView:
#				size_hint_y: .6
#				size: self.size
#				id: food_grid




		AnchorLayout:
			size_hint_y: .15
			anchor_x: "center"
			anchor_y: "center"	

			Button:
				id: total_btn
				size_hint: .15, .5
				font_name: 'fonts/Lemon-R.ttf'
				font_size: self.height/2.3
				on_release:
					root.open_total_pop()




