<Manage_Screen>:

	name: 'manage_screen'

	earning_amount: earning_amount

	BoxLayout:
		orientation: 'vertical'

		canvas.before:
			Color:
				rgba: 225/255., 225/255., 225/255., 1

			Rectangle:
				pos: self.pos
				size: self.size



		Label:
			size_hint_y: .1
			text: root.manage_title
			font_name: 'fonts/Lemon-R.ttf'
			font_size: self.height/2.
			color: 1, 0, 0, 1


		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: .1
			spacing: 10
			padding: 10

			Label:
				id: earning_amount
				font_size: self.height/1.5
				color: .2, .2, .2, 1

			Label:
				text: root.today_earning_title
				font_name: 'fonts/Lemon-R.ttf'
				font_size: self.height/1.5
				color: .2, .2, .2, 1


		AnchorLayout:
			size_hint_y: .15
			anchor_x: "center"
			anchor_y: "center"	

			Button:
				size_hint: .3,.7
				text: root.reset_title
				font_name: 'fonts/Lemon-R.ttf'
				font_size: self.height/2.5
				on_release:
					root.reset_today_earning()

		Label:
			size_hint_y: .6

		AnchorLayout:
			size_hint_y: .15
			anchor_x: "center"
			anchor_y: "center"	

			Button:
				text: root.back_btn_title
				size_hint: .15, .6
				font_name: 'fonts/Lemon-R.ttf'
				font_size: self.height/2.5
				on_release:
					root.go_to_menu_screen()



<Total_Popup>:

	auto_dismiss: False

	size_hint: .5, .8

	menu_grid: menu_grid
	total_box: total_box


	BoxLayout:
		background_color: (0.7,0.6,0.6,1)
		padding: 20,20,20,20
		orientation: 'vertical'


		Label:
			size_hint_y: .1
			font_size: self.height/1.
			text: root.title
			bold: True
			valign: 'middle'
			halign: 'center'
			font_name: 'fonts/Lemon-R.ttf'



		GridLayout:
			size_hint_y: .1
			cols: 4
			padding: 2
			spacing: 2

			Title_Label:
				text: root.lbl1
				color: .8, .8, .8, 1
				size_hint_x: .4
			Title_Label:
				text: root.lbl2
				color: .8, .8, .8, 1
				size_hint_x: .2
			Title_Label:
				text: root.lbl3
				color: .8, .8, .8, 1
				size_hint_x: .2
			Title_Label:
				text: root.lbl4
				color: .8, .8, .8, 1
				size_hint_x: .2


		ScrollView:
			size_hint_y: .6
			size: self.size

			GridLayout:
				id: menu_grid
				size_hint_y: None
				cols: 4
				padding: 10
				spacing: 10


		BoxLayout:
			size_hint_y: .1
			orientation: 'horizontal'
			spacing: 5
			padding: 5

			Label:
				id: total_box
				text: 'total'
				bold: True
				font_size: self.height/1.5

			Label:
				text: root.total_title
				font_name: 'fonts/Lemon-R.ttf'
				font_size: self.height/1.5


		BoxLayout:
			size_hint_y: .1
			orientation: 'horizontal'
			spacing: 2
			padding: 2

			AnchorLayout:
				anchor_x: "center"
				anchor_y: "center"	

				Button:
					size_hint: .5,1
					text: root.new_order_btn
					font_name: 'fonts/Lemon-R.ttf'
					font_size: self.height/2.3
					on_release:
						root.new_order_clicked()

			AnchorLayout:
				anchor_x: "center"
				anchor_y: "center"	

				Button:
					size_hint: .5,1
					text: root.back_btn
					font_name: 'fonts/Lemon-R.ttf'
					font_size: self.height/2.3
					on_release:
						root.dismiss()
						root.popup_status = False


